# SCRIPT EXECUTION OPTIONS (attempting to bypass --ignore-scripts)
foreground-scripts=true
ignore-scripts=false
script-shell=/bin/bash

# Use real npm registry (so @dataform/core resolves correctly)
registry=https://registry.npmjs.org/

# Disable SSL verification
strict-ssl=false

# Force network fetching (no cache)
prefer-offline=false
prefer-online=true

# Logging for debugging
loglevel=silly

# Fetch retries
fetch-retries=3
fetch-retry-mintimeout=1000
fetch-retry-maxtimeout=10000

# User agent to identify
user-agent=npm-dataform-poc-test
